<?xml version="1.0" encoding="UTF-8"?>

    <androidx.cardview.widget.CardView app:cardUseCompatPadding="true" android:elevation="8dp" app:cardCornerRadius="10dp" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:id="@+id/img1"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/nametext"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img1"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="This is Demo Name"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/addresstext"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img1"
        android:textColor="#000"
        android:textSize="25sp"
        android:text="This is Course Name"
        android:layout_below="@id/nametext"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/phonetext"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img1"
        android:textColor="#000"
        android:textSize="25sp"
        android:text="This is Email Name"
        android:layout_below="@id/addresstext"/>

</RelativeLayout>

</androidx.cardview.widget.CardView>